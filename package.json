{
  "name": "seisplotjs",
  "version": "2.0.0-alpha.6",
  "description": "Javascript library for parsing, manipulating and displaying seismic data.",
  "main": "dist/seisplotjs-umd.js",
  "module": "dist/module/index.js",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@babel/runtime": "^7.6.0",
    "crc-32": "^1.2.0",
    "d3": "^5.12.0",
    "js-quantities": "^1.7.4",
    "moment": "^2.24.0",
    "oregondsp": "^1.2.2",
    "pikaday": "^1.8.0",
    "rsvp": "^4.8.5"
  },
  "scripts": {
    "lint": "eslint 'src/*.js' 'test/*.js' 'test/*/*.js' ",
    "examplelint": "eslint  'example/socal/socal.js' 'example/southcarolina/southcarolina.js' ",
    "test": "jest",
    "flow": "flow",
    "flow-copy": "flow-copy-source -v -i '**/__tests__/**' src dist/module",
    "rollup": "rollup --config rollup.config.js",
    "build:clean": "rimraf dist",
    "apidoc:clean": "rimraf docs/api",
    "compile": "npm run build:clean && npm run rollup && npm run flow-copy && npm run standalone && npm run doc",
    "standalone": "browserify src/index.js --ignore-missing --standalone seisplotjs -o dist/seisplotjs_${npm_package_version}_standalone.js  -t [ babelify ]",
    "doc": "npm run apidoc",
    "apidoc": "npm run apidoc:clean && ./createApiDocs.sh",
    "prepare": "npm run flow && npm run lint && npm run test && npm run compile",
    "version": "npm run compile && npm run standalone",
    "postversion": "echo git push && echo git push --tags",
    "bumpversion": "replace-in-file seisplotjs_2.0.0-alpha.5_standalone.js seisplotjs_2.0.0-alpha.6_standalone.js docs/tutorial/tutorial*.html example/*/*.html  docs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crotwell/seisplotjs.git"
  },
  "keywords": [
    "seismology",
    "miniseed",
    "steim1",
    "steim2"
  ],
  "author": "Philip Crotwell <crotwell@seis.sc.edu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crotwell/seisplotjs/issues"
  },
  "homepage": "https://github.com/crotwell/seisplotjs",
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.0",
    "documentation": "^12.1.2",
    "eslint": "^6.4.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "flow-bin": "^0.107.0",
    "flow-copy-source": "^2.0.8",
    "flowtypify": "^1.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.9.0",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "jest-extended": "^0.11.2",
    "prismjs": "^1.17.1",
    "replace-in-file": "^4.1.3",
    "rollup": "^1.21.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-flow-entry": "^0.3.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "> 1% in US",
              "not ie 11",
              "not dead"
            ],
            "node": "current"
          }
        }
      ],
      "@babel/preset-flow"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  }
}
