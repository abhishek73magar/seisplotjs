{
  "name": "seisplotjs",
  "version": "2.0.0-alpha.2",
  "description": "Javascript library for parsing, manipulating and displaying seismic data.",
  "main": "lib/index.js",
  "dependencies": {
    "crc-32": "^1.2.0",
    "d3": "^5.9.0",
    "js-quantities": "^1.7.3",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.25",
    "oregondsp": "^1.1.1-alpha.1",
    "pikaday": "^1.8.0",
    "rsvp": "^4.8.4"
  },
  "scripts": {
    "lint": "eslint 'src/*.js' ",
    "examplelint": "eslint  'example/socal/socal.js' 'example/southcarolina/southcarolina.js' ",
    "test": "jest",
    "flow": "flow",
    "flow-copy": "flow-copy-source -v -i '**/__tests__/**' src lib",
    "build:clean": "rimraf lib",
    "build:compile": "babel  -d lib/ src/ ",
    "compile": "npm run build:clean && npm run build:compile && npm run flow-copy",
    "standalone": "browserify src/index.js --ignore-missing --standalone seisplotjs -o seisplotjs_${npm_package_version}_standalone.js  -t [ babelify ]",
    "doc": "documentation build  src/*.js --github -o docs -f html --document-exported ",
    "prepare": "npm run compile",
    "version": "npm run compile && npm run standalone",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crotwell/seisplotjs.git"
  },
  "keywords": [
    "seismology",
    "miniseed",
    "steim1",
    "steim2"
  ],
  "author": "Philip Crotwell <crotwell@seis.sc.edu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/crotwell/seisplotjs/issues"
  },
  "homepage": "https://github.com/crotwell/seisplotjs",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "documentation": "^11.0.0",
    "esdoc": "^1.1.0",
    "esdoc-flow-type-plugin": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-flowtype": "^3.8.2",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.98.1",
    "flow-copy-source": "^2.0.6",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.1"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 versions"
            ],
            "node": "current"
          }
        }
      ],
      "@babel/preset-flow"
    ]
  }
}
